project libs/stringify/test
    : requirements 
      <include>../include
    ;

sources-v1 =
    v1/input_string_test.cpp
    v1/input_int_test.cpp
    v1/input_char_test.cpp
    v1/join_test.cpp 
    v1/output_types_test.cpp
    v1/ftuple_merge_test.cpp
;

test-suite stringify-v1 : [ run-stringify-tests $(sources-v1) ] ;

# Satisfy the Boost library requirements
test-suite minimal  : stringify-v1 ;
test-suite full     : stringify-v1 ;
test-suite extra    : stringify-v1 ;

explicit stringify-v1 ;
explicit minimal ;
explicit extra ;
