project
    : requirements 
      <include>../include
      <include>./fmt-4.0.0
      <define>FMT_HEADER_ONLY=1
    : default-build release
    ;

sources = to_char_ptr.cpp ;

for local src in $(sources)
{
    exe $(src:B) : $(src) : <optimization>speed ;
}

install ./out : $(sources:B) ;


