project
    : requirements 
      <include>../include
    : default-build release
    ;

lib loop_timer
    : loop_timer.cpp
    ;

sources = [ glob *.cpp : loop_timer.cpp ] ;
#sources = int.cpp ;

for local src in $(sources)
{
    exe $(src:B) 
        : $(src)
          loop_timer/<link>static
          /boost//timer/<link>static
        ;
}

install ./out : $(sources:B) ;


